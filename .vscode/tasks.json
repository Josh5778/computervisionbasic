{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "-IC:/opencv/build/include",                  // Windows example include
                "-LC:/opencv/build/x64/vc15/lib",             // Link OpenCV libraries
                "-lopencv_core451",
                "-lopencv_highgui451",
                "-lopencv_imgcodecs451",
                "-lopencv_imgproc451",
                "-lopencv_objdetect451"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}